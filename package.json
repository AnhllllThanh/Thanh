  "dependencies": { 
    "express": "^4.18.2", // Express.js 
    "body-parser": "^1.20.2", //  Xử lý body của request
    "bcrypt": "^5.1.0", // Mã hóa password
    "mongoose": "^6.7.0", // Kết nối với MongoDB
    "express-session": "^1.18.2", // Session 
    "connect-mongo": "^4.7.2", //  Lưu session vào MongoDB
    "nodemailer": "^6.9.1", // Gửi email
    "crypto": "^1.0.1" // Tạo token 
  },
  "devDependencies": { 
    "typescript": "^4.9.5", //  TypeScript
